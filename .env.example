# Configurações do Banco de Dados PostgreSQL
DATABASE_URL=postgresql://usuario:senha@localhost:5432/memoria_premiada

# Configurações da Aplicação
NODE_ENV=production
PORT=5000

# Chave de Sessão - GERE UMA CHAVE FORTE
SESSION_SECRET=sua_chave_secreta_muito_forte_aqui

# API de Pagamentos PIX - PRIMEPAG
PRIMEPAG_CLIENT_ID=seu_client_id_primepag
PRIMEPAG_CLIENT_SECRET=seu_client_secret_primepag
PRIMEPAG_TEST_MODE=false

# API de Pagamentos Crypto - PLISIO
PLISIO_SECRET_KEY=sua_chave_secreta_plisio

# Configurações de Admin
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=hash_bcrypt_da_senha_admin

# Configurações de Email
USE_PHP_MAILER=false
SMTP_HOST=smtp.seu-provedor.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=seu.email@dominio.com
SMTP_PASS=sua_senha_app
FROM_EMAIL=noreply@seu-dominio.com

# URLs da Aplicação
APP_URL=https://seu-dominio.com
CALLBACK_URL=https://seu-dominio.com/api/webhooks
SUCCESS_URL=https://seu-dominio.com/payments/success
FAIL_URL=https://seu-dominio.com/payments/failed